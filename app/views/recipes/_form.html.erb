<div class="row">
  <div class="col-sm-offset-4 col-sm-5 ">
    <p>
    <%= render 'shared/error', obj: @recipe%>

    <%= form_for @recipe do |recipe|%>
        <div class="form-group row">
          <%= recipe.label :Recipe_Name, class: "col-sm-4 form-control-label text-center" %>
          <div class="col-sm-8">
            <%= recipe.text_field :name, placeholder: "Recipe Name", class: "form-control"%>
          </div>
        </div>

        <div class="form-group row">
          <%= recipe.label :Summary, class: "col-sm-4 form-control-lable text-center" %>
          <div class="col-sm-8">
            <%= recipe.text_field :summary, placeholder: "Summary", class: "form-control"%>
          </div>
        </div>

        <div class="form-group row">
          <%= recipe.label :Description, class: "col-sm-4 form-control-label text-center" %>
          <div class="col-sm-8">
            <% rows = (@recipe.description.blank? || @recipe.description.size < 80)? 7 : 18%>
            <%= recipe.text_area :description, placeholder: "Details description", class: "form-control", cols: "30", rows: rows %>
          </div>
        </div>

        <%= recipe.submit form_name, class: "btn btn-success btn-md" , style: "margin-left: 28%" %>
    <% end %>
    </p>
  </div>
</div>