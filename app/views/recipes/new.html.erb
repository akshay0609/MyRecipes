<div class="container-fluid ">
  <h3 class="recipe-title text-center">Create New Recipe</h3>
  <hr>
  <div class="row">
    <div class="col-sm-offset-4 col-sm-5 ">
      <p>
        <% if @recipe.errors.any? %>
            <div class="alert alert-danger well">
                <ul>
                    <% @recipe.errors.full_messages.each do |error| %>
                       <li><%=error%></li>
                    <%end%>
                </ul>
            </div>
        <%end%>

        <%= form_for @recipe do |recipe|%>
          <div class="form-group row">
            <%= recipe.label :Recipe_Name, class: "col-sm-3 form-control-label text-center" %>
            <div class="col-sm-8">
              <%= recipe.text_field :name, placeholder: "Recipe Name", class: "form-control"%>
            </div>
          </div>

          <div class="form-group row">
            <%= recipe.label :Summary, class: "col-sm-3 form-control-lable text-center" %>
            <div class="col-sm-8">
              <%= recipe.text_field :summary, placeholder: "Summary", class: "form-control"%>
            </div>
          </div>

          <div class="form-group row">
            <%= recipe.label :Description, class: "col-sm-3 form-control-label text-center" %>
            <div class="col-sm-8">
              <%= recipe.text_area :description, placeholder: "Details description", class: "form-control", cols: "30", rows: "5" %>
            </div>
          </div>

         <%= recipe.submit 'Create Recipe', class: "btn btn-success btn-md" , style: "margin-left: 28%" %>
      <% end %>
      </p>
    </div>
  </div>
</div>