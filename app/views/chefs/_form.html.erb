<div class="row">
  <div class="col-sm-offset-3 col-sm-7 ">
    <p>
    <%= render 'shared/error', obj: @chef%>

    <%= form_for @chef do |chef|%>
        <div class="form-group row">
          <%= chef.label :User_name, class: "col-sm-4 form-control-label text-center" %>
          <div class="col-sm-8">
            <%= chef.text_field :chefname, placeholder: "User Name", class: "form-control"%>
          </div>
        </div>

        <div class="form-group row">
          <%= chef.label :Email, class: "col-sm-4 form-control-lable text-center" %>
          <div class="col-sm-8">
            <%= chef.email_field :email, placeholder: "Email", class: "form-control"%>
          </div>
        </div>

        <div class="form-group row">
          <%= chef.label :password, class: "col-sm-4 form-control-label text-center" %>
          <div class="col-sm-8">
            <%= chef.password_field :password, placeholder: "Enter password", class: "form-control"%>
          </div>
        </div>

        <div class="form-group row">
          <%= chef.label :password_conformation, class: "col-sm-4 form-control-label text-center" %>
          <div class="col-sm-8">
            <%= chef.password_field :password_conformation, placeholder: "Re enter password", class: "form-control"%>
          </div>
        </div>
        <%= chef.submit form_name, class: "btn btn-success btn-md" , style: "margin-left: 30%; width: 40%; margin-bottom: 10px" %>
    <% end %>
    </p>
  </div>
</div>