<div class="container-fluid " xmlns="http://www.w3.org/1999/html">
  <h3 class="recipe-title text-center">MyRecipes.com</h3>
  <hr>

  <div class="text-center row">
    <div class="col-sm-offset-4 col-sm-5">
      <div class="login_form">
        <p><h3 class="recipe-title" style="padding-bottom: 8px">login</h3></p><hr>
        <%= form_tag '/login' do %>
          <div class="form-group row">
            <label class="col-sm-5 form-control-label text-center">Email ID</label>
            <div class="col-sm-7">
              <%= text_field_tag :email, nil, placeholder: "User Name", class: "form-control"%>
            </div>
          </div>

          <div class="form-group row">
            <label class="col-sm-5 form-control-label text-center">Password</label>
            <div class="col-sm-7">
              <%= text_field_tag :password, nil, placeholder: "Password", class: "form-control"%>
            </div>
          </div>

          <%= submit_tag "Sigin", class: "btn btn-success btn-md", style: "width: 70%; margin-bottom: 10px" %>
        <%end%>
        <h4><%= link_to "Register New User", chef_register_path, style: "margin-top: 22px"%></h4>
     </div>
    </div>
  </div>

</div>